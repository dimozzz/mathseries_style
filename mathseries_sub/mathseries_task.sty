\ProvidesPackage{mathseries_task}

\RequirePackage{enumitem}

\newcounter{curtask}

\newenvironment{task}[1][ML]{
	\noindent\fbox{\textbf{{#1} \arabic{curtask}.}}
}{
	\addtocounter{curtask}{1}
}

\newenvironment{ptask}[2][ML]{
	\noindent\fbox{\textbf{{#1} {#2}.}}
}{
}


\newcommand{\breakline}[1][0.5cm]{
	\vspace{#1}
    \hrule
    \vspace{#1}
}


\newlist{itemtask}{itemize}{2}
\setlist[itemtask]{label=\textbullet, topsep = 0pt, itemsep = -1ex}

\newlist{enumtask}{enumerate}{2}
\setlist[enumtask]{label*=\arabic*., topsep = 0pt, itemsep = -1ex}

